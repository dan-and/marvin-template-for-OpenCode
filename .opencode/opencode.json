{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "marvin": {
      "description": "Main MARVIN AI Chief of Staff with full capabilities",
      "mode": "primary",
      "model": "opencode/big-pickle",
      "temperature": 0.3,
      "prompt": "{file:./prompts/marvin.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true,
        "skill": true
      },
      "permission": {
        "edit": "ask",
        "bash": {
          "*": "allow",
          "git push": "ask",
          "git force-push": "deny",
          "rm": "ask"
        },
        "webfetch": "allow"
      }
    },
    "planner": {
      "description": "Analysis and planning - read-only, no changes",
      "mode": "primary",
      "model": "opencode/big-pickle",
      "temperature": 0.1,
      "prompt": "{file:./prompts/planner.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "webfetch": true,
        "skill": true
      },
      "permission": {
        "edit": "deny",
        "bash": {
          "*": "deny",
          "grep *": "allow",
          "find *": "allow",
          "git log*": "allow",
          "git diff*": "allow"
        }
      }
    },
    "executor": {
      "description": "Execution specialist - focused implementation",
      "mode": "subagent",
      "model": "opencode/big-pickle",
      "temperature": 0.3,
      "prompt": "{file:./prompts/executor.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true,
        "skill": true
      },
      "permission": {
        "edit": "allow",
        "bash": {
          "git push": "ask",
          "git force-push": "deny",
          "rm": "ask"
        }
      }
    },
    "briefing": {
      "description": "Session briefing specialist",
      "mode": "subagent",
      "model": "opencode/big-pickle",
      "temperature": 0.1,
      "prompt": "{file:./prompts/briefing.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "webfetch": false,
        "skill": true
      }
    }
  },
  "command": {
    "marvin": {
      "description": "Start MARVIN session with briefing",
      "agent": "marvin",
      "template": "{file:./commands/marvin.md}"
    },
    "end": {
      "description": "End session and save progress",
      "agent": "marvin",
      "template": "{file:./commands/end.md}"
    },
    "update": {
      "description": "Quick checkpoint during session",
      "agent": "marvin",
      "template": "{file:./commands/update.md}"
    },
    "report": {
      "description": "Generate weekly summary report",
      "agent": "marvin",
      "template": "{file:./commands/report.md}"
    },
    "commit": {
      "description": "Review and commit git changes",
      "agent": "marvin",
      "template": "{file:./commands/commit.md}"
    },
    "sync": {
      "description": "Sync with MARVIN template updates",
      "agent": "marvin",
      "template": "{file:./commands/sync.md}"
    }
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "git *": "ask",
      "rm": "ask",
      "mv": "ask",
      "rm -rf": "deny"
    },
    "webfetch": "allow",
    "skill": {
      "*": "allow"
    }
  }
}
